
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="3"
                android:paddingBottom="20sp">
                <ImageView
                    android:id="@+id/vprofile_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="5sp"
                    android:src="@drawable/add_image_100"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnSpan="3"
		        />
                <ImageView
                    android:id="@+id/vprofile_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/add_image_40"
                    android:layout_margin="5sp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:maxWidth="5sp"
                    android:layout_rowSpan="2"
				/>

                <TextView
                    android:id="@+id/vprofile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="Name"
                     android:textSize="20sp"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
 	            />


                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="5dp">

                     <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/marker_24"
                    android:layout_margin="5sp"
                    android:tint="@color/colorPrimaryDark"
				/>
                    <TextView
                        android:id="@+id/vprofile_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left | center_vertical"
                        android:text="Location Text"
                        android:textSize="15sp"
                        android:maxLines="1"

								/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/vprofile_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right | top"
                    android:src="@drawable/edit_24"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_columnWeight=".5"
                    android:layout_rowSpan="2"
                    android:paddingRight="10dp"
                    android:background="@android:color/transparent"
				/>


            </GridLayout>
        </android.support.v7.widget.CardView>
        
        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="2"
                android:paddingBottom="20sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Summary"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnSpan="2"
								/>
                <ImageButton
                    android:id="@+id/vprofile_summary_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/edit_24"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnWeight=".5"
                    android:paddingRight="10dp"
                    android:background="@android:color/transparent"
				/>

                <TextView
                    android:id="@+id/vprofile_summary"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnSpan="2"
                    android:hint="@string/paragraph"
 	            />
            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <GridLayout
                android:id="@+id/vprofile_category_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="3"
                android:paddingBottom="20sp">
                <Spinner
                    android:id="@+id/vprofile_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left | center_vertical"
                    android:prompt="Category"
                    android:textSize="20sp"
                    android:layout_column="0"
                    android:layout_row="0"/>


            </GridLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/vprofile_contact_card"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:rowCount="7"
                android:columnCount="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Contact"
                    android:textSize="20sp"
                    android:paddingBottom="10sp"
                    android:maxLines="1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnSpan="2"
								/>
                <ImageButton
                    android:id="@+id/vprofile_phone_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/edit_24"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:background="@android:color/transparent"
				/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone_24"
                    android:layout_margin="5sp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_rowSpan="2"
				/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="phone"
                        android:textSize="12sp"
                        android:maxLines="1"
								/>

                    <TextView
                        android:id="@+id/vprofile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="PhoneText"
                        android:textSize="15sp"
                        android:maxLines="1"

								/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/email_24"
                    android:layout_margin="5sp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_rowSpan="2"
				/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/vprofile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="email"
                        android:textSize="12sp"
                        android:maxLines="1"
								/>
                    <TextView
                        android:id="@+id/profile_email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Email Text"
                        android:textSize="15sp"
                        android:maxLines="1"

								/>
                </LinearLayout>

               
               
            </GridLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>