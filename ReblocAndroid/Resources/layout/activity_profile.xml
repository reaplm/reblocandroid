<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    android:paddingTop="30dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/female_user_256"
	/>
    <TextView
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Display Name"
	/>

    <GridLayout
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:rowCount="2"
        android:columnCount="3"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/user_24"
            android:layout_marginRight="20sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
				/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="left"
                android:maxLines="1"
            android:layout_column="1"
            android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="name"
            android:textSize="12sp"
								/>
        <TextView
            android:id="@+id/profile_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="thi s is a very long name for testingName Text"
            android:textSize="15sp"
            android:maxLines="1"
            
								/>
            </LinearLayout>
        <ImageButton
            android:id="@+id/profile_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/edit_24"
            android:layout_marginRight="20sp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@android:color/transparent"
				/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:rowCount="2"
        android:columnCount="2"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/email_24"
            android:layout_margin="5sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_marginRight="20sp"
				/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="email"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_column="1"
            android:layout_row="0"
								/>
        <TextView
            android:id="@+id/profile_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Email Text"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_column="1"
            android:layout_row="1"
								/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:rowCount="2"
        android:columnCount="3"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_gravity="center"
            android:src="@drawable/phone_24"
            android:layout_margin="5sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
				/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="left"
                android:maxLines="1"
            android:layout_column="1"
            android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="phone"
            android:textSize="12sp"
            android:maxLines="1"
								/>

        <TextView
            android:id="@+id/profile_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="PhoneText"
            android:textSize="15sp"
            android:maxLines="1"

								/>
            </LinearLayout>
        <ImageButton
            android:id="@+id/profile_phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/edit_24"
            android:layout_marginRight="20sp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@android:color/transparent"
				/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:rowCount="1"
        android:columnCount="2"
        android:paddingTop="10sp"
        >


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40sp">
        <TextView
            android:id="@+id/profile_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/reset_password"
            android:textColor="@color/colorPrimaryDark"
            android:paddingRight="5sp"
            android:textSize="11sp"

								/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5sp"
            android:text="@string/delete_account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="11sp"

								/>
    </LinearLayout>
</LinearLayout>